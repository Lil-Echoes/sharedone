<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="productns">

	<select id="productList" resultType="product">
		SELECT * FROM product
	</select>
	
	<select id="productDetail" parameterType="String" resultType="product">
		SELECT * FROM product WHERE productCD = #{productCD}
	</select>
	
	<update id="productUpdate" parameterType="product">
		UPDATE product SET productNM=#{productNM}, unit=#{unit}, productGroup=#{productGroup} WHERE productCD=#{productCD}
	</update>
	
	<delete id="productDelete" parameterType="String">
		DELETE product WHERE productCD = #{productCD}
	</delete>
	
	<insert id="productInsert" parameterType="product">
		INSERT INTO product VALUES (#{productCD}, #{productNM}, #{unit}, #{productGroup})
	</insert>
	
	<select id="totalByProductGroup" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM product WHERE productgroup=#{productGroup}
	</select>
	
	
</mapper>